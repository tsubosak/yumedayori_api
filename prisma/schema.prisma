// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  artwork   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  artists   Artist[]
  tracks    Track[]
}

model Track {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  albums    Album[]
  artists   Artist[]
}

model Artist {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parents   Artist[] @relation("ArtistParents")
  children  Artist[] @relation("ArtistParents")
  tracks    Track[]
  albums    Album[]
}
