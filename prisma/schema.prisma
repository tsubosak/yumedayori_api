// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  artwork   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  artists   Artist[]
  tracks    Track[]
}

model Track {
  id        Int             @id @default(autoincrement())
  title     String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  albums    Album[]
  artists   Artist[]
  credits   CreditOnTrack[]
}

enum ArtistType {
  INDIVIDUAL
  GROUP
}

enum ArtistParentType {
  CONSIST_OF
  VOICED_BY
}

model Artist {
  id        Int                    @id @default(autoincrement())
  name      String                 @unique
  type      ArtistType
  createdAt DateTime               @default(now())
  updatedAt DateTime               @updatedAt
  parents   ArtistParentOnArtist[] @relation("ArtistChildren")
  children  ArtistParentOnArtist[] @relation("ArtistParents")
  tracks    Track[]
  albums    Album[]
  credits   CreditOnTrack[]
}

model ArtistParentOnArtist {
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt
  parent     Artist            @relation("ArtistParents", fields: [parentId], references: [id])
  parentId   Int
  child      Artist            @relation("ArtistChildren", fields: [childId], references: [id])
  childId    Int
  parentType ArtistParentType?

  @@id([parentId, childId])
}

enum Credit {
  PRODUCER
  WRITER
  COMPOSER
  ARRANGER
  PERFORMER
  MIXER
  MASTERER
  ENGINEER
  LYRICIST
  OTHER
}

model CreditOnTrack {
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  artist     Artist   @relation(fields: [artistId], references: [id])
  artistId   Int
  track      Track    @relation(fields: [trackId], references: [id])
  trackId    Int
  creditedAs Credit

  @@id([artistId, trackId, creditedAs])
}
