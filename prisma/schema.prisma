// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Album {
  id        Int      @id @default(autoincrement())
  title     String   @unique
  artwork   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  artists   Artist[]
  tracks    Track[]
}

model Track {
  id        Int             @id @default(autoincrement())
  title     String          @unique
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  albums    Album[]
  artists   Artist[]
  credits   CreditOnTrack[]
}

enum ArtistType {
  INDIVIDUAL
  GROUP
}

model Artist {
  id        Int             @id @default(autoincrement())
  name      String          @unique
  type      ArtistType
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
  parents   Artist[]        @relation("ArtistParents")
  children  Artist[]        @relation("ArtistParents")
  tracks    Track[]
  albums    Album[]
  credits   CreditOnTrack[]
}

enum Credit {
  PRODUCER
  WRITER
  COMPOSER
  ARRANGER
  PERFORMER
  MIXER
  MASTERER
  ENGINEER
  LYRICIST
  OTHER
}

model CreditOnTrack {
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  artist     Artist   @relation(fields: [artistId], references: [id])
  artistId   Int
  track      Track    @relation(fields: [trackId], references: [id])
  trackId    Int
  creditedAs Credit

  @@id([artistId, trackId, creditedAs])
}
